require("winsome")

-- Just about the awesomest theme for awesome.
theme = winsome.theme("wool")

-- Colours
theme.bg_normal = "#E5E9E0" -- Off-white
theme.fg_normal = "#111111" -- Off-black
theme.border_normal = theme.bg_normal

theme.bg_focus  = "#FFFFFF" -- Bright white
theme.fg_focus  = "#000000" -- Pitch black
theme.border_focus = theme.bg_focus

theme.bg_urgent = "#25B9F9" -- Sky blue
theme.fg_urgent = theme.fg_normal
theme.border_urgent = theme.bg_urgent

return theme
