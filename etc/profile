if test -n "$INITS"; then
  export INITS="/etc/profile:$INITS"
else
  export INITS="/etc/profile"
fi

export PATH="/usr/local/bin:/usr/local/sbin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
export INPUTRC="/etc/inputrc"

export LC_COLLATE="C"

export COLUMNS LINES

shopt -s checkwinsize

export COLORIZE_AS='red'
. /etc/prompt

if [ ! -f /etc/system ]; then
  # No system type! Can't use this bash profile.
  echo -e "** No /etc/system file! ${RED}Going down NOW.${CLEAR} **"
  sleep 2
  exit
else
  . /etc/system
fi

umask 022

if [ `ls -A1 /etc/profile.d/ | wc -l` -gt 0 ]; then
  for profile in /etc/profile.d/*.sh; do
    if [ -x $profile ]; then
      . $profile
    fi
  done
  unset profile
fi

export DISPLAY=:0.0
export LC_CTYPE=en_US.UTF-8

stty erase ^H