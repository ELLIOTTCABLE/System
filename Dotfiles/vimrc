" toggles showmarks and gitgutter
let g:gitgutter_enabled = 0
fun! ToggleGutter()
   if !exists('b:gp')
      let b:gp = 1
      setl updatetime=200
      DoShowMarks!
      GitGutterEnable
   else
      GitGutterDisable
      NoShowMarks!
      sign unplace *
      setl updatetime=4000
      unlet b:gp
   endif
endfun

au VimEnter * call ToggleGutter()

" FIXME: I'd like to hook into the mksession! that focus.vim is calling, instead of dup'ing settings
fun! ToggleFocusMode()
   if !exists("t:fm")
      let t:fm = 1
      set nonumber
      hi NonText guifg=bg
      let b:gp = 1 | call ToggleGutter()
      execute "normal \<Plug>FocusModeToggle"
   else
      execute "normal \<Plug>FocusModeToggle"
      call ToggleGutter()
      set number
      unlet t:fm
   endif
endfunc

"autocmd FileType c,cpp nested :TagbarOpen
